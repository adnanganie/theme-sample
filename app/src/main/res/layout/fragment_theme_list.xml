<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.sample.ThemeSampleView
            android:id="@+id/sampleCardSeaFoam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.SeaFoam"/>

        <com.sample.ThemeSampleView
            android:id="@+id/sampleCardIllini"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.Illini"/>

        <com.sample.ThemeSampleView
            android:id="@+id/sampleCardTokyo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.Tokyo"/>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>